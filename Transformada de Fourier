import numpy as np
import matplotlib.pyplot as plt

# Crear el tiempo: 1 segundo con 1000 muestras
t = np.linspace(0, 1, 1000)

# Frecuencia de la señal senoidal
f = 5  # Hz

# Crear la señal senoidal
seno = np.sin(2 * np.pi * f * t)

# Aplicar la Transformada de Fourier
S = np.fft.fft(seno)
frecuencias = np.fft.fftfreq(len(t), d=t[1] - t[0])

# Graficar la magnitud del espectro de frecuencia
plt.figure(figsize=(10, 4))
plt.plot(frecuencias, np.abs(S))
plt.title('Espectro de Frecuencia - Señal Senoidal')
plt.xlabel('Frecuencia [Hz]')
plt.ylabel('Magnitud')
plt.grid(True)
plt.show()
