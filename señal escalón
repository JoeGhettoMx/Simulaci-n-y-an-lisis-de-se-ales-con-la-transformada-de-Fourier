import numpy as np
import matplotlib.pyplot as plt

# Crear el tiempo: 1 segundo con 1000 muestras
t = np.linspace(0, 1, 1000)

# Crear la señal escalón (Heaviside) que comienza en t = 0.5 segundos
u = np.heaviside(t - 0.5, 1)

# Graficar la señal escalón
plt.figure(figsize=(10, 4))
plt.plot(t, u)
plt.title('Señal Escalón en el Dominio del Tiempo')
plt.xlabel('Tiempo [s]')
plt.ylabel('Amplitud')
plt.grid(True)
plt.show()
