#1. Señal senoidal
import numpy as np
import matplotlib.pyplot as plt

# Crear el tiempo: 1 segundo con 1000 muestras
t = np.linspace(0, 1, 1000)

# Frecuencia de la señal
f = 5  # Hz

# Crear la señal senoidal
seno = np.sin(2 * np.pi * f * t)

# Graficar la señal
plt.figure(figsize=(10, 4))
plt.plot(t, seno)
plt.title('Señal Senoidal en el Dominio del Tiempo')
plt.xlabel('Tiempo [s]')
plt.ylabel('Amplitud')
plt.grid(True)
plt.show()
